  <div class="container">
    <div class="text">
      <div class="title2lines">
        <div class="title">NEWS INFORMATION</div>
        <div>新闻资讯</div>
      </div>
    </div>
  </div>
</div>

<div class="news-wrapper container">
  {% for i in range(0, 4) %}
